---
import Card from "../Home/Card.astro";
interface Props {
    title: string;
    url: string;
    niceUrl: string;
    path: string;
    svg32?: boolean;
    stroke?: boolean;
}

const { title, url, niceUrl, path, svg32 = false, stroke = false } = Astro.props;
---

<a href={url} target="_blank">
    <Card class="col-start-2 row-span-1 flex items-center gap-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill={stroke ? 'none' : 'currentColor'} viewBox={ svg32 ? '0 0 32 32' : '0 0 24 24' } stroke-width="3" stroke={stroke ? 'currentColor' : 'none'} class="size-8">
            <path stroke-linecap="round" stroke-linejoin="round" d={ path } />
        </svg>
        <div class="w-full">
            <h3 class="text-xl">{ title }</h3>
            <p class="text-text-secondary">{ niceUrl }</p>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
    </Card>
</a>